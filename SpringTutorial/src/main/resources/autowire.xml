<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="triangle" class="com.terry.world.core_spring._7_Autowire.Triangle" autowire="byName" />
	
	<bean id="hexagon_type" class="com.terry.world.core_spring._7_Autowire.Hexagon" autowire="byType" />
	
	<bean id="hexagon_constructor" class="com.terry.world.core_spring._7_Autowire.Hexagon" autowire="constructor" />
	
	<bean id="pointA" class="com.terry.world.core_spring._7_Autowire.Point">
		<property name="x" value="100"/>
		<property name="y" value="100"/>
	</bean>
	
	<bean id="pointB" class="com.terry.world.core_spring._7_Autowire.Point">
		<property name="x" value="75"/>
		<property name="y" value="125"/>
	</bean>
	
	<bean id="pointC" class="com.terry.world.core_spring._7_Autowire.Point">
		<property name="x" value="125"/>
		<property name="y" value="125"/>
	</bean>
</beans>
